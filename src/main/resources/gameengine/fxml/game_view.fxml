<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<StackPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameengine.GameView">
   <children>
      <Pane fx:id="canvas" prefHeight="768.0" prefWidth="1024.0" StackPane.alignment="CENTER" />
      <VBox fx:id="pauseMenu" alignment="TOP_CENTER" spacing="100.0" style="-fx-background-color: #ffffffcc;" visible="false">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Paused">
               <font>
                  <Font name="System Bold" size="60.0" />
               </font>
            </Text>
              <Button fx:id="menuButton" onAction="#clickMainMenu" text="Menu" textAlignment="CENTER">
               <font>
                  <Font size="25.0" />
               </font>
            </Button>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
