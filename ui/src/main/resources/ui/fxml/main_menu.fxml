<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox alignment="TOP_CENTER" prefHeight="768.0" prefWidth="1024.0" spacing="20.0" styleClass="main_menu" stylesheets="@../css/main_menu.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainMenu">
    <children>
        <Label styleClass="title" text="Game Engine" textAlignment="CENTER">
            <font>
                <Font size="50.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Label>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Button minHeight="40.0" minWidth="200.0" onAction="#buttonPlay" styleClass="menu_button" text="Play"/>
                <Button minHeight="40.0" minWidth="200.0" onAction="#buttonLevelEditor" styleClass="menu_button" text="Level editor"/>
                <Button minHeight="40.0" minWidth="200.0" onAction="#buttonSettings" styleClass="menu_button" text="Settings">
                    <VBox.margin>
                        <Insets top="40.0"/>
                    </VBox.margin>
                </Button>
                <Button layoutX="402.0" layoutY="190.0" minHeight="40.0" minWidth="200.0" onAction="#buttonExit" styleClass="menu_button" text="Exit"/>
            </children>
            <VBox.margin>
                <Insets top="50.0"/>
            </VBox.margin>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" fillHeight="false" VBox.vgrow="ALWAYS">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Label styleClass="author_label" text="Petr Chalupa, 2025"/>
                        <Region prefWidth="10.0"/>
                        <Button mnemonicParsing="false" onAction="#buttonReportBug" styleClass="button_bug"/>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
